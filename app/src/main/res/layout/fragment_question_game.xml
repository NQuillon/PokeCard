<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_game"
        style="?android:attr/progressBarStyleHorizontal"/>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question "
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:id="@+id/numQuestion"/>
    </LinearLayout>


    <TextView
        android:id="@+id/question_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_marginBottom="22dp"
        android:text="Chargement de la question..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="12sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/trueBtn"
            android:layout_width="152dp"
            android:layout_height="62dp"
            android:textSize="18sp"
            android:background="@drawable/round_button_null"
            android:text="Vrai"/>

        <Button
            android:id="@+id/falseBtn"
            android:layout_marginLeft="22dp"
            android:layout_width="152dp"
            android:textSize="18sp"
            android:background="@drawable/round_button_null"
            android:layout_height="62dp"
            android:text="Faux"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>