<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_game"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question "
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/numQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>


        <TextView
            android:id="@+id/question_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:text="Chargement de la question..."
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12sp">

            <Button
                android:id="@+id/trueBtn"
                android:layout_width="152dp"
                android:layout_height="62dp"
                android:background="@drawable/round_button_null"
                android:text="Vrai"
                android:textSize="18sp" />

            <Button
                android:id="@+id/falseBtn"
                android:layout_width="152dp"
                android:layout_height="62dp"
                android:layout_marginLeft="22dp"
                android:background="@drawable/round_button_null"
                android:text="Faux"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>